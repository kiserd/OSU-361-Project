<br />
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Choose Recipe</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h2>Common Recipes</h2>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">View Ingredients</th>
            <th scope="col">Save Recipe</th>
          </tr>
        </thead>
        <tbody>
          {{#each recipes}}
          <tr>
            <td>
              <span id="recipe_name_{{this.id}}"><b>{{this.name}}</b></span>
              <br/>
              <small>{{this.type}}</small>
            </td>
            <td>

              <button class="btn btn-outline-info view_recipe_button" name="recipe_id" href="#collapse_{{this.id}}"
                data-toggle="modal" data-target="#ingredientsModal" aria-expanded="false"
                aria-controls="collapse_{{this.id}}" value={{this.id}} id="view_{{this.id}}">View Ingredients</button>


            </td>
            <td>
              {{#if this.in_book}}
              <a href="/my_recipes#{{this.id}}"><button class="btn btn-light">View in Recipe Book</button></a>
              {{else}}
              <button class="btn btn-light save_recipe_button" style="color:blue" name="recipe_id" id={{this.id}}
                value={{this.id}} data-container="body" data-toggle="popover" data-placement="right" data-html="true"
                data-content="<a href='/my_recipes#{{this.id}}'>Go to Recipe Book</a><br/><a href='/view_ingredients?recipe_id={{this.id}}'>Go to {{this.name}}"><span
                  id="save_loader_{{this.id}}" role="status" aria-hidden="true"></span><span
                  id="save_text_{{this.id}}"><svg width="1em" height="1em" viewBox="0 0 16 16"
                    class="bi bi-bookmark-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                      d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z" />
                    <path fill-rule="evenodd"
                      d="M8 4a.5.5 0 0 1 .5.5V6H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V7H6a.5.5 0 0 1 0-1h1.5V4.5A.5.5 0 0 1 8 4z" />
                  </svg> Save</span></button>
              {{/if}}
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="modal fade" id="ingredientsModal" tabindex="-1" aria-labelledby="ingredientsModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" style="font-weight:bold;" id="ingredientsModalLabel">Recipe Name</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body" id="modal-body">
              <p style="display:block;margin:auto;text-align:center;"><b>Ingredients</b><br/><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-book" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M1 2.828v9.923c.918-.35 2.107-.692 3.287-.81 1.094-.111 2.278-.039 3.213.492V2.687c-.654-.689-1.782-.886-3.112-.752-1.234.124-2.503.523-3.388.893zm7.5-.141v9.746c.935-.53 2.12-.603 3.213-.493 1.18.12 2.37.461 3.287.811V2.828c-.885-.37-2.154-.769-3.388-.893-1.33-.134-2.458.063-3.112.752zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
</svg></p>
              <div id="modal-body-content">
              </div>

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <a href="" id="view_full_link"><button type="button" class="btn btn-primary">View Full</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="choose_recipe.js"></script>
</div>