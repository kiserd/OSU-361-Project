<br>
<link href="build_recipe.css" rel="stylesheet">
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div id="ingredientListTitleDiv">
                </br>
                <h3 id="ingredientListTitle">Ingredients</h3>
            </div>
            <div id="ingredientList">
                {{#each ingredients}}
                <div id={{this.id}} class="card shadow fade ingredientDiv show">
                    <div class="card-body ingredientDivCardBody" onclick="makeRecipeRow({{this.id}})">
                        <div id="ingredientDivGrid1">
                            <h5 class="card-title" id="ingredientName_{{this.id}}">{{this.name}}</h5>
                            <div class="rounded border border-dark ingredientColor"
                                style="background-color: {{this.iconColor}};">
                                <img class="ingredientIcon" src={{this.icon}} />
                            </div>
                        </div>
                        <div id="ingredientDivGrid2">
                            <span class="badge badge-light ingredientType">
                                {{this.type}}
                            </span>
                            <span class="{{#if this.impact}} badge badge-{{this.color}} {{/if}} ingredientImpact" id="ingredientImpact_{{this.id}}">
                                {{this.impact}}
                            </span>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-sm-6" id="recipeListContainer">
            <div id="recipeList">

                <div id="recipeListTitleDiv">
                    <br />
                    <div id="recipeListTitle">
                        <h3><input type="text" id="userRecipeName" placeholder="My Recipe"></input></h3>
                        <form>
                            <div class="form-group">

                                <select class="custom-select form-control col-sm-12 col-md-6"
                                    style="margin:auto; text-align:center;margin-bottom:1rem;" id="mealType">
                                    <option selected value="">Select Meal Type</option>
                                    <option value="Breakfast">Breakfast</option>
                                    <option value="Lunch">Lunch</option>
                                    <option value="Dinner">Dinner</option>
                                    <option value="Appetizer">Appetizer</option>
                                    <option value="Snack">Snack</option>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="recipeListDiv" class="accordion">
                    <div class="card shadow" id="recipePlaceholder">
                        <div class="card card-body">Add an ingredient to get started.</div>
                        <table id="recipeListTable" class="table">

                        </table>
                    </div>
                    <template id="recipe-row-template">
                        <div id="recipeRowDiv" class=" card">
                            <div id="recipeRow" class=" fade row table-sm card-header">
                                <div id="recipeIngredientTitleDiv" class="col-sm ">
                                    <button style="font-weight:bolder;" id="recipeIngredientButton" type="button"
                                        data-toggle="collapse" class=" btn btn-link btn-block text-left collapsed ">
                                    </button>
                                </div>
                                <span id="recipeIngredientImpactDiv" class="col-sm "></span>
                                <div id="deleteButtonDiv" class="col-sm ">
                                    <button id="deleteButton" class=" btn btn-danger btn-sm" style="float:right;">Delete</button>
                                </div>
                            </div>
                            <div id="collapsedDiv" class="collapse table-active row " data-parent="">
                                <div id="arrowIndentDiv" style="font-size:1.3rem;" class=" col-sm-3 pointFivePad">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" style="display:table; margin:auto;"
                                        class="bi bi-arrow-return-right" fill="currentColor"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                            d="M1.5 1.5A.5.5 0 0 0 1 2v4.8a2.5 2.5 0 0 0 2.5 2.5h9.793l-3.347 3.346a.5.5 0 0 0 .708.708l4.2-4.2a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 8.3H3.5A1.5 1.5 0 0 1 2 6.8V2a.5.5 0 0 0-.5-.5z" />
                                    </svg>
                                </div>
                                <div id="amountInputDiv" class=" col-sm form-group-sm row pointFivePad">
                                    <input id="amountInput" type="text" rows="1" style="resize:none;"
                                        class=" form-control form-control-sm" placeholder="Enter amount" />
                                    <small id="amountInputLabel" class=" form-text text-muted">Amount (e.g. 2 cups)</small>
                                </div>
                                <div id="prepInputDiv" class=" col-sm form-group-sm pointFivePad"
                                    style="margin-right:1rem;">
                                    <input id="prepInput" class=" form-control form-control-sm" rows="1" style="width:100%;"
                                        placeholder="Enter prep notes" />
                                    <small id="prepInputLabel" class=" form-text text-muted">Prep (e.g. finely
                                        chopped)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </template>
            </div>
            <button id="sendRecipeButton" class="btn btn-success" disabled>Add Recipe</button>
        </div>
    </div>
</div>
<script src="buildRecipeScript.js"></script>